<% include partials/header %>
<div class='container'>	
	<div class='row'>
		<div class="col-md-12" id='welcomeBox'>
			<h1>Welcome: <%= user.firstName %></h1>
				<ul>
					<li>Employer Email: <%= user.email %></li>
					<li>Employer Company: <%= user.companyName %></li>		
					<br>
					<a href='/employers/update/<%= user.id %>'><button>Update Employer</button></a>
					<form method='post' action='/employers/delete/<%= user.id %>'>
			        <a><button>Delete Employer</button></a>
			        </form>
			        <a href="/employers/<%= user.id %>/employeeView"><button>Click to hire employees</button></a>
				</ul>
			</div>
		</div>	
</div>				

<div class='container' id='employmentsBox'>
	<div class='row'>		
		<div class='col-md-3 Emp' id="divvy">
			<h4>CURRENT EMPLOYMENTS</h4>
				<ul>
				 <% employees.forEach( employee => { %>
					<li id='empDetails'>Employee Name: <%= employee.firstName %></li>
					<li id='empDetails'>Employee Surname: <%= employee.lastName %></li>
					<li id='empDetails'>Employee Telephone Number: <%= employee.telephoneNo %></li>
					<% if(typeof(employee.rating[0]) == 'undefined'){ %>
						<li id='empDetails'>Employee has no rating yet</li>
					<% } else { %>
						<li id='empDetails'>Employee Rating: <%= employee.rating[employee.rating.length - 1] %>/5</li>
					<%	} %>
					<div class='popup'><button>Click To Rate Employee</button>
						<div class="popuptext" id="myPopup">
							<form method='post' action='/employers/<%= employee.id %>/employeeRate'>
								<div id='hero'>Rate This Employee</div>
								<i class="glyphicon glyphicon-thumbs-down"></i>
								<input type='submit' id='inputs' name='one' value='1'>
								<input type='submit' id='inputs' name='two' value='2'>
								<input type='submit' id='inputs' name='three' value='3'>
								<input type='submit' id='inputs' name='four' value='4'>
								<input type='submit' id='inputs' name='five' value='5'>
								<i class="glyphicon glyphicon-thumbs-up"></i>
							</form>
						</div>
					</div>
				<form method='post' action='/employers/<%= employee.id %>/employeeDelete'>
						<input type="submit" value="Delete employee">
				</form>	
			 	 <%	 }) %>
				</ul> 
		</div>
		<div class='col-md-3 pastEmp'>
				<div id='divvy'>
				<h4>Past Employments</h4>
				<% emps.forEach( employee => { %>	
					<li>Employee Name: <%= employee.firstName %></li>
					<form method='post' action='/employers/<%= employee.id %>/remove'>
						<input type="submit" value="Remove">
					</form>
				<%	 }) %>	
				</div>
		</div>
	</div>
</div>					
 
<script type="text/javascript" src="/stylesheets/viewEmployerFunctions.js"></script>

<% include partials/footer %>
